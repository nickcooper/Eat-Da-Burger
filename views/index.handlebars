<div class="container">
  <h1>Eat Da Burger!</h1>
  <div class="row">
    <div class="col-md-6">
      <h2>Burgers to Eat</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-6">
      <h2>Burgers Eaten!</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <h2>Add Burger</h2>
      <form class="create-form add-burger">

        <div class="form-group">
          <label for="burger_name">Burger Name:</label>
          <input type="text" id="burger_name" name="burger_name">
        </div>
        <button id="submit-button" type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>